{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "자기소개서 템플릿 스키마",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "const": "resume_cover_letter"
    },
    "name": {
      "type": "string",
      "const": "자기소개서 / 커버레터"
    },
    "category": {
      "type": "string",
      "const": "취업"
    },
    "description": {
      "type": "string",
      "const": "입사지원서나 자기소개서 작성을 위한 프롬프트"
    },
    "icon": {
      "type": "string",
      "default": "📝"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "draft"],
      "default": "active"
    },
    "template": {
      "type": "string",
      "minLength": 100,
      "description": "Handlebars 템플릿 문자열"
    },
    "options": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "enum": ["position", "company", "experience", "tone", "length"]
          },
          "label": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["text", "select"]
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "placeholder": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          },
          "defaultValue": {
            "type": "string"
          }
        },
        "required": ["key", "label", "type", "required"],
        "allOf": [
          {
            "if": {
              "properties": { "key": { "const": "position" } }
            },
            "then": {
              "properties": {
                "label": { "const": "지원 직무" },
                "type": { "const": "select" },
                "required": { "const": true },
                "options": {
                  "type": "array",
                  "contains": {
                    "type": "string",
                    "enum": ["소프트웨어 엔지니어", "프로덕트 매니저", "UI/UX 디자이너", "데이터 분석가", "마케팅 전문가", "영업 관리자"]
                  },
                  "minItems": 6
                }
              }
            }
          },
          {
            "if": {
              "properties": { "key": { "const": "company" } }
            },
            "then": {
              "properties": {
                "label": { "const": "회사명" },
                "type": { "const": "text" },
                "required": { "const": false },
                "placeholder": { "const": "지원하는 회사명을 입력하세요" }
              }
            }
          },
          {
            "if": {
              "properties": { "key": { "const": "experience" } }
            },
            "then": {
              "properties": {
                "label": { "const": "경력 수준" },
                "type": { "const": "select" },
                "required": { "const": true },
                "options": {
                  "type": "array",
                  "contains": {
                    "type": "string",
                    "enum": ["신입", "1~3년차", "3~5년차", "5~10년차", "10년차 이상", "시니어급"]
                  },
                  "minItems": 6
                }
              }
            }
          },
          {
            "if": {
              "properties": { "key": { "const": "tone" } }
            },
            "then": {
              "properties": {
                "label": { "const": "작성 톤" },
                "type": { "const": "select" },
                "required": { "const": true },
                "options": {
                  "type": "array",
                  "contains": {
                    "type": "string",
                    "enum": ["정중하고 격식있게", "친근하고 자연스럽게", "전문적이고 간결하게", "유머러스하고 재치있게", "감성적이고 따뜻하게", "단호하고 설득력있게"]
                  },
                  "minItems": 6
                }
              }
            }
          },
          {
            "if": {
              "properties": { "key": { "const": "length" } }
            },
            "then": {
              "properties": {
                "label": { "const": "분량" },
                "type": { "const": "select" },
                "required": { "const": true },
                "options": {
                  "type": "array",
                  "contains": {
                    "type": "string",
                    "enum": ["마이크로카피 (50자 이하)", "짧게 (200-400자)", "보통 (500-800자)", "길게 (1000-1500자)", "아주 길게 (2000자 이상)"]
                  },
                  "minItems": 5
                }
              }
            }
          }
        ]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "default": "EasyPick"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["취업", "자기소개서", "커버레터", "입사지원"]
        },
        "difficulty": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"],
          "default": "beginner"
        },
        "estimatedTime": {
          "type": "string",
          "default": "5-10분"
        },
        "usage": {
          "type": "object",
          "properties": {
            "totalUsage": {
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "monthlyUsage": {
              "type": "number", 
              "minimum": 0,
              "default": 0
            }
          }
        }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "position": {
          "type": "string",
          "default": "소프트웨어 엔지니어"
        },
        "experience": {
          "type": "string",
          "default": "신입"
        },
        "tone": {
          "type": "string",
          "default": "정중하고 격식있게"
        },
        "length": {
          "type": "string",
          "default": "보통 (500-800자)"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "name", "category", "description", "template", "options"],
  "additionalProperties": false
}